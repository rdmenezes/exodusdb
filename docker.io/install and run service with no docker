sudo mv /var/www/html /var/www/html.orig && sudo ln -s ~/exodus/www /var/www/html
sudo a2enmod ssl rewrite && sudo a2ensite default-ssl
sudo cp ~/exodus/service/exodus-apache2.conf /etc/apache2/conf-enabled

